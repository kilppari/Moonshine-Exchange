    <ImageButton
        android:id="@+id/button_add_component_form"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:contentDescription="@string/component_add_img_description"
        android:src="@android:drawable/ic_input_add" />
      	
   	<View style="@style/Divider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_cocktail_method"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/new_cocktail_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_cocktail_method_hint"
        android:inputType="textMultiLine"/>
    
   	<View style="@style/Divider"/>
   	
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_cocktail_optional_information" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_cocktail_description"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/new_cocktail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_cocktail_description_hint"
        android:inputType="textMultiLine" />
    
    <TextView
        android:layout_width="wrap_content"
